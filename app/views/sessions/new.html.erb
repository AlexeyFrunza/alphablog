<h1 class="text-center mt-4 purple_text">Log in</h1>


<div class="container shadow-sm p-3 mb-5 mt-5 rounded card-body signup">
  <div class="row justify-content-center">
    <div class="justify-content-center">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username , class: "col-form-label text-light text-center" %>
        <div class="">
          <%= f.text_field :username, class: "form-control mt-3", placeholder: "Enter your username" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password , class: "col-form-label text-light text-center" %>
        <div class="">
          <%= f.password_field :password, class: "form-control mt-3", placeholder: "Enter your password" %>
        </div>
      </div>

      <p class="text-center mt-4">
        <%= f.submit "Log in", class: "btn btn-lg inverted_btn" %>
      </p>

    <% end %>
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-light cancel-button" %>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center">
  <p class="purple_text">
    Have you not signed up yet?
  </p>
</div>
<div class="container d-flex justify-content-center">
  <%= link_to "Sign up", signup_path, class: "nav-link dropdown-item text-center" %>
</div>
