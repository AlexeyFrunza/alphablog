
<div class="container shadow-sm p-3 mb-5 mt-5 rounded card-body">
  <%= render 'shared/errors', obj: @article %>
  <div class="row justify-content-center">
    <div class="col-10">
    <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control mt-3"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description , class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description,rows: 10, class: "form-control mt-3" %>
        </div>
      </div>

      <p class="text-center mt-4">
        <%= f.submit class: "btn btn-lg inverted_btn"%>
      </p>
    <% end %>
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-light" %>
    </div>
  </div>
</div>